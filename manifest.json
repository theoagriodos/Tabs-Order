{
  "manifest_version": 2,
  "name": "Tab Sorter",
  "version": "1.0.0",
  "background": {
    "service_worker": "background.js"
  },
  "chrome_url_overrides" : {
    "newtab": "popup.html"
  },
  "description": "Classez vos onglets",
  "permissions": [
    "tabs", "storage"
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "img-tab.png",
    "options_page": "options.html"
  }
}
